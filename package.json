{
  "name": "boilerplate-cypress-v2",
  "version": "0.1.0",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "cypress:open": "cypress open --env configFile=develop",
    "cypress:run": "cypress run --env configFile=develop",
    "cypress:clearReport": "rm -rf cypress/results/*",
    "cypress:openDev": "cypress open --env configFile=develop",
    "cypress:openStag": "cypress open --env configFile=staging",
    "cypress:runDev": "./node_modules/.bin/cypress install && cypress run --env configFile=develop --browser chrome",
    "cypress:runStag": "cypress run --env configFile=staging --browser chrome",
    "cypress:check": "./node_modules/.bin/cypress verify",
    "cypress:createReport": "npx mochawesome-merge ./cypress/results/report/*.json > ./cypress/results/mochawesome.json && npx marge ./cypress/results/mochawesome.json -o ./cypress/results && rm -rf cypress/results/report && mv cypress/results/mochawesome.html cypress/results/index.html",
    "cypress:openStage": "cypress open --env configFile=staging",
    "cypress:runStage": "cypress run --env configFile=staging",
    "cypress:verify": "./node_modules/.bin/cypress verify",
    "lint": "eslint cypress --fix",
    "lint:check": "eslint cypress --color",
    "prettier": "prettier --write './cypress/**/*.js'",
    "prettier:check": "prettier --list-different './cypress/**/*.js'"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.13.12",
    "@bahmutov/cy-api": "^1.5.0",
    "@cypress/webpack-preprocessor": "^5.9.0",
    "babel-loader": "^8.1.0",
    "cypress": "8.4.1",
    "cypress-multi-reporters": "^1.5.0",
    "cypress-plugin-tab": "^1.0.5",
    "cypress-slack-reporter": "^1.0.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.1.0",
    "prettier": "^2.3.0",
    "webpack": "^4.46.0"
  },
  "dependencies": {
    "date-fns": "^2.22.1",
    "faker": "^5.5.3"
  }
}
